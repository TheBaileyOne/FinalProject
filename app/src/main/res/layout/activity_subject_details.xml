<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <LinearLayout
        android:id="@+id/subject_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@color/cardview_light_background">

        <LinearLayout
            android:id="@+id/subject_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:text="Subject Name: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/subject_title_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16sp"
                android:layout_margin="5dp"
                android:text="Details" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/subject_info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:text="Subject Info: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/subject_info_view_name"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Details" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assessments:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="add Score"
                    android:id="@+id/button_add_score"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/table_subject_grades"
                android:stretchColumns="1,2,3,4"
                android:gravity="center">
                <TableRow
                    android:id="@+id/table_subject_grades_title"
                    android:visibility="gone"
                    >
                    <TextView
                        android:text="Name"
                        android:background="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingHorizontal="4dp"/>
                    <TextView
                        android:text="Weighting"
                        android:background="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingHorizontal="4dp"/>
                    <TextView
                        android:text="Max Marks"
                        android:background="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingHorizontal="4dp"/>
                    <TextView
                        android:text="Mark"
                        android:background="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingHorizontal="4dp"/>
                    <TextView
                        android:text="%"
                        android:background="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingHorizontal="4dp"/>
                </TableRow>

            </TableLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sub_percent_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject Percentage:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/subject_percent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/subject_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subject_percent_string"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/subject_events_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:text="Subject Events: "
                android:textStyle="bold"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/subject_event_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/subject_events_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintBottom_toTopOf="@+id/subject_info_view_button_addEvent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/subject_info_view_button_addEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Event"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/subject_events_recyclerView"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/subject_info_view_button_generateStudy" />

                <Button
                    android:id="@+id/subject_info_view_button_generateStudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Study Generator"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/subject_events_recyclerView" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/subject_detail_fragment"/>
</androidx.constraintlayout.widget.ConstraintLayout>